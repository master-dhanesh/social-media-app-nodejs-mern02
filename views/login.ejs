<%- include('partials/header')%>
<div class="container p-5 text-center ">
    <h1 class="text-tomato mb-4">User | Login Page</h1>
    <form class="w-25 text m-auto" action="/login" method="POST">
        <div class="row mb-4">
            <input 
                placeholder="Enter Username"
                name="username"
                type="text" 
                class="form-control pt-2 pb-2">
        </div>
        <div class="row mb-4">
            <input 
                placeholder="Enter Password"
                name="password"
                type="password" 
                class="form-control pt-2 pb-2">
        </div>
        <p class="text-start">
            <a href="/forgot-password">Forgot Password?</a>
        </p>
        <button class="btn btn-dark btn-block w-100 tomato m_btn p-2 ps-5 pe-5 ">Login</button>

    </form>


    
    

    <p class="mt-3 text-tomato">Don't have an account? <a href="/register">Signup</a></p>

</div>
<%- include('partials/footer')%>