<%- include('partials/header')%>
<div class="container p-5">
    <h1 class="text-center text-tomato mb-4">User | Profile Page</h1>
    <p class="text-end w-75"><strong>ðŸ‘‹<%= loggedInUser.name%></strong></p>
    <ol class="w-50 m-auto list-group list-group-numbered mt-3 mb-3">
        <% users.forEach(user => { %>
        <li
            class="mb-3 list-group-item d-flex justify-content-between align-items-start"
        >
            <img
                style="margin-left: 1vmax"
                width="100"
                src="/uploads/<%= user.avatar %>"
                alt=""
            />
            <div class="ms-2 me-auto">
                <div class="fw-bold"><%= user.username%></div>
                <%= user.name%> | <%= user.email%>
            </div>
            <div class="d-flex">
                <a
                    href="/update/<%= user._id%>"
                    class="badge bg-primary text-light text-decoration-none rounded-pill"
                    >update</a
                >
                &nbsp;
                <a
                    href="/delete/<%= user._id%>"
                    class="badge bg-danger text-light text-decoration-none rounded-pill"
                    >delete</a
                >
            </div>
        </li>
        <% }) %>
    </ol>

    <p class="mt-3 text-center text-tomato">
        Do you want to leave? <a href="/logout">Logout</a>
    </p>
    <p class="mt-3 text-center text-tomato">
        Want to change password? <a href="/change-password">Reset Password</a>
    </p>
</div>
<%- include('partials/footer')%>
