<%- include('partials/header')%>
<div class="container p-5 text-center">
    <h1 class="text-tomato mb-4">User | Reset Password Page</h1>
    <form class="w-25 text m-auto" action="/change-password" method="POST">
        <div class="row mb-4">
            <input
                placeholder="Enter Old Password"
                name="oldpassword"
                type="password"
                class="form-control pt-2 pb-2"
            />
            <input
                placeholder="Enter New Password"
                name="newpassword"
                type="password"
                class="form-control pt-2 pb-2 mt-3"
            />
        </div>
        <button class="btn btn-dark btn-block w-100 tomato m_btn p-2 ps-5 pe-5">
            Reset Password
        </button>
    </form>

    <p class="mt-3 text-tomato">
        Already have an account? <a href="/login">Signin</a>
    </p>
</div>
<%- include('partials/footer')%>
